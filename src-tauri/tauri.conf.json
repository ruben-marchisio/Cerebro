{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "cerebro",
  "version": "0.1.0",
  "identifier": "com.ruben-marchisio.cerebro",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "cerebro",
        "width": 1024,
        "height": 672,
        "minWidth": 900,
        "minHeight": 560,
        "decorations": false,
        "devtools": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
